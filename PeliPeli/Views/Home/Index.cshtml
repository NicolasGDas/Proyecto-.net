@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://static.cinemarkhoyts.com.ar/Images/SiteBanners/452.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://static.cinemarkhoyts.com.ar/Images/SiteBanners/29.png" alt="Second slide">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4 style="margin-top:40px">Todas las peliculas</h4>
        <div class="estrenos">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("Detalle", "Pelicula", new { id = item.IdPelicula })" class="estrenos-item"><img src="~/Content/img/@item.Imagen" alt="@item.Titulo" width="200px"></a>
            }
        </div>
        <h4 style="margin-top:40px">M&aacute;s reservadas</h4>
        <div class="estrenos">
            @foreach (var item in Model)
            {
                if (item.TopReservada)
                {
                    <a href="@Url.Action("Detalle", "Pelicula", new { id = item.IdPelicula })" class="estrenos-item"><img src="~/Content/img/@item.Imagen" alt="@item.Titulo" width="200px"></a>
                }
            }
        </div>
    </div>
</div>